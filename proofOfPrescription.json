{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "date", "patient_age", "diagnosis", "prescription", "symptoms"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the patient."
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "The date of the medical record entry."
    },
    "patient_age": {
      "type": "integer",
      "minimum": 0,
      "description": "The age of the patient."
    },
    "diagnosis": {
      "type": "string",
      "description": "The medical diagnosis for the patient."
    },
    "prescription": {
      "type": "string",
      "description": "The prescribed treatment or medication for the patient."
    },
    "symptoms": {
      "type": "string",
      "description": "The symptoms reported by the patient."
    }
  }
}
